<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Internet สำหรับ Firebase/REST -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Android 13+ ต้องขออนุญาตแจ้งเตือน (จะมี runtime prompt ในแอปด้วย) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- เปิดสั่นตอนแจ้งเตือน (ไม่บังคับ แต่ควรมี) -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="${applicationName}"
        android:label="frontend"
        android:icon="@mipmap/ic_launcher"
        android:allowBackup="true"
        android:supportsRtl="true">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode">
            <!-- ธีมที่แสดงระหว่างบูต Flutter -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ให้ Flutter ลงทะเบียน plugins อัตโนมัติ -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

        <!-- ค่าเริ่มต้นสำหรับ notification ที่มาจาก FCM (กรณีระบบต้องแสดงให้เอง)
             * ไอคอน: ใช้ launcher icon (แนะนำทำ ic_stat_notification แบบขาวดำภายหลัง)
             * สี: ใช้สีหลักของแอป -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/purple_500" />

        <!-- (ไม่ต้องเพิ่ม service/receiver ของ FCM เอง
             ไลบรารี firebase_messaging จะ merge ให้อัตโนมัติ) -->

    </application>

    <!-- Package visibility: สำหรับ Process Text plugin ของ Flutter -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>
</manifest>
